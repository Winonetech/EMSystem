<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="50"  mouseChildren="false">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import emap.map2d.vos.E2VORoute;
			[Bindable]
			private var _route:E2VORoute;
			public  function set route($value:E2VORoute):void
			{
				_route = $value;
			}
			public function get route():E2VORoute
			{
				return _route;
			}
			[Bindable]
			public var selected:Boolean;
		]]>
	</fx:Script>
	<s:CheckBox x="32" y="11" label="{_route.label}" selected="{selected}" />
</s:BorderContainer>
