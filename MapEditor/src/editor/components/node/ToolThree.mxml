<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="100%" height="50" backgroundColor="0xdce1e8" borderVisible="false">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:ComboBox id="cb" x="76" y="10" width="128" height="28" selectedItem="{EDConfig.instance.selectedFloor}" dataProvider="{collection}" change="cb_changeHandler(event)" horizontalCenter=""/>
	<fx:Script>
		<![CDATA[
			import editor.core.EDConfig;
			
			import emap.map2d.Floor;
			import emap.map2d.core.E2Config;
			import emap.map2d.vos.E2VOFloor;
			import emap.map2d.vos.E2VOPosition;
			
			import mx.collections.ArrayCollection;
			
			import spark.events.IndexChangeEvent;
			public function set dataProvider($value:Object):void
			{
				collection = new ArrayCollection($value as Array);
			
			}
			[Bindable]
			private var collection:ArrayCollection;
			private var voFloor:E2VOFloor;
			
			protected function cb_changeHandler(event:IndexChangeEvent):void
			{
				
				// TODO Auto-generated method stub
				voFloor = cb.selectedItem as E2VOFloor;
				EDConfig.instance.selectedFloor = voFloor;
				EDConfig.instance.nodeGroup.addNodeByFloor(voFloor);
				EDConfig.instance.e2Config.eMap.viewFloor(voFloor.id);
				EDConfig.instance.propertyPanel.setCurrentState("node",true);
				
			}
			
